{
  "name": "fastify-server",
  "version": "1.0.0",
  "description": "A template for a fastify server",
  "main": "server.ts",
  "scripts": {
    "start": "pm2-runtime dist/server.js",
    "docker:local": "npm run clean && SERVER_ENV=local tsc-watch -p tsconfig-build.json --onSuccess \"node dist/server.js\" | ./node_modules/.bin/pino-pretty",
    "local": "npm run clean && SERVER_ENV=local tsc-watch -p tsconfig-build.json --onSuccess \"node --require ./dotenv-local dist/server.js\" | ./node_modules/.bin/pino-pretty",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "test:local": "npm run lint && npm run test:unit:local && npm run test:integration:local",
    "test:unit": "jest --runInBand --config jest.config.unit.json",
    "test:unit:local": "SERVER_ENV=test LOCAL_RUN=true jest --runInBand --detectOpenHandles --config jest.config.unit.json",
    "test:integration": "jest --runInBand --config jest.config.integration.json",
    "test:integration:local": "SERVER_ENV=test LOCAL_RUN=true jest --runInBand --detectOpenHandles --config jest.config.integration.json",
    "clean": "node_modules/.bin/rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "author": "Sudin Dinesh",
  "license": "MIT",
  "dependencies": {
    "@fastify/autoload": "^6.0.2",
    "@fastify/etag": "^6.0.1",
    "@fastify/routes": "^6.0.1",
    "@fastify/swagger": "^9.2.0",
    "@fastify/swagger-ui": "^5.1.0",
    "cls-rtracer": "^2.6.3",
    "cross-fetch": "^4.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1",
    "pm2": "^5.4.2",
    "source-map-support": "^0.5.21",
    "uuid": "^11.0.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/node": "^22.8.2",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "nock": "^13.5.5",
    "pino-pretty": "^11.3.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.6.3"
  }
}
